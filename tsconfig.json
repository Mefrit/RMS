{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "amd",
        "noImplicitAny": false,
        "removeComments": true,
        "noEmitOnError": false,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noResolve": false,
        "moduleResolution": "node",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "baseUrl": "source/typescript/",
        "paths": {
            "whiteboard/*": [
                "whiteboard/svg/*"
            ],
            "abstract/*": [
                "whiteboard/abstract/*"
            ]
        },
        "types": [
            "react",
            "react-dom",
            "requirejs"
        ],
        "lib": [
            "es5",
            "es6",
            "es2015",
            "es2017",
            "dom",
            "es2015.core",
            "es2015.promise"
        ]
    },
    "exclude": [
        "./node_modules"
    ]
}